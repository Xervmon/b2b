<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.3" client="site" method="upgrade">
  <name>mod_briefcasefactory_statistics</name>
  <description>Briefcase Factory Statistics Module</description>
  <files>
    <filename module="mod_briefcasefactory_statistics">mod_briefcasefactory_statistics.php</filename>
    <folder>tmpl</folder>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>mod_briefcasefactory_statistics.xml</filename>
  </files>
  <languages>
    <language tag="en-GB">en-GB.mod_briefcasefactory_statistics.ini</language>
    <language tag="en-GB">en-GB.mod_briefcasefactory_statistics.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="total" type="list" default="1" label="MOD_BRIEFCASEFACTORY_STATISTICS_FIELD_TOTAL_LABEL" description="MOD_BRIEFCASEFACTORY_STATISTICS_FIELD_TOTAL_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
        <field name="public" type="list" default="1" label="MOD_BRIEFCASEFACTORY_STATISTICS_FIELD_PUBLIC_LABEL" description="MOD_BRIEFCASEFACTORY_STATISTICS_FIELD_PUBLIC_DESC">
          <option value="0">JNO</option>
          <option value="1">JYES</option>
        </field>
      </fieldset>
      <fieldset name="advanced">
        <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
        <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
        <field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
          <option value="1">JGLOBAL_USE_GLOBAL</option>
          <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
        </field>
        <field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
        <field name="cachemode" type="hidden" default="static">
          <option value="static"/>
        </field>
      </fieldset>
    </fields>
  </config>
  <version>4.0.8</version>
  <author>thePHPfactory</author>
  <copyright>SKEPSIS Consult SRL</copyright>
  <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
  <authorEmail>contact@thephpfactory.com</authorEmail>
  <authorUrl>http://www.thephpfactory.com</authorUrl>
  <url>http://www.thephpfactory.com</url>
  <creationDate>June 2007</creationDate>
</extension>
