<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="details">
		<field name="type" type="FactoryNotificationType" class="notification-type" />
    <field name="lang_code" type="FactoryLanguage" />
    <field name="published" type="FactoryPublished" />
    <field name="id" type="text" class="readonly" default="0" readonly="true" />
  </fieldset>

  <fieldset name="message">
    <field name="subject" type="text" display="vertical" required="true" />
    <field name="body" type="FactoryNotificationBody" display="vertical" required="true" filter="raw" />
  </fieldset>
</form>
